<Page x:Class="Diplom.Pages.PageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAdmin">

    <Page.Resources>
        <DataTemplate x:Key="DT">
            <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Background}">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding row1}"></TextBlock>
                        <TextBlock Text="{Binding row2}"></TextBlock>
                        <TextBlock Text="{Binding row3}"></TextBlock>
                    </StackPanel>
                    <Image Source="{Binding Img}" Width="70" Height="70"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <ListView x:Name="lblisApplicationsList" ItemTemplate="{StaticResource DT}" >
            
        </ListView>
    </Grid>
</Page>
