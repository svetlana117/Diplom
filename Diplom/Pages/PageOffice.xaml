<Page x:Class="Diplom.Pages.PageOffice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageOffice">

    <Grid>
        <StackPanel Background="Black" Height="150" VerticalAlignment="Top">
            <TextBlock Text="ПОМОЩЬ СИСТЕМНЫХ АДМИНИСТРАТОРОВ" Style="{StaticResource txt2}" HorizontalAlignment="Center" Margin="20"></TextBlock>
            <StackPanel Orientation="Horizontal" Width="525" >
                <Button x:Name="btnApplication" Width="125" Height="25" Content="Остаить заявку" Style="{StaticResource btn1}" Margin="25"></Button>
                <Button x:Name="btnContacts" Width="125" Height="25" Content="Контакты" Style="{StaticResource btn1}"  Margin="25"></Button>
                <Button x:Name="btnExit" Width="125" Height="25" Content="Выход" Style="{StaticResource btn1}"  Margin="25"></Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Background="White" Height="300" VerticalAlignment="Bottom">
            <TextBlock Text="{Binding hello}" Style="{StaticResource txt3}"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
